                        <Image HorizontalAlignment="Left" Height="250" Margin="102,651,0,0" VerticalAlignment="Top" Width="250" Source="/Icones/rio.jpg" />
                    </Grid>
                </ScrollViewer>
            </controls:PivotItem>

